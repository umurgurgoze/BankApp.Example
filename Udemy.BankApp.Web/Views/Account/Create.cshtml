@model ApplicationUser
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-6">
        <h3>Hesap Eklenecek Kişi Bilgileri</h3> 
        <p>Kullanıcı Adı : @Model.Name</p>
        <p>Kullanıcının Soyadı : @Model.Surname</p>
        <p>Kullanıcının Aktif Hesap Sayısı: <getAccountCount application-user-id="@Model.Id"></getAccountCount></p>

    </div>
    <div class="col-6">
        <h4>Ekleme İşlemi</h4>
    </div>
</div>